<%= form_for(@restaurante, html: {class: 'form-horizontal'}) do |f| %>
  <% if @restaurante.errors.any? %>
    <div id="error_explanation">
	<h2>%= pluralize(@restaurante.errors.count, "error") % problema(s) ao salvar</h2>
		<ul>
			<% @restaurante.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
   </div>
<% end %>
	
	<div class="field form-group">
		<%= f.label :nome, class: 'col-sm-2 control-label' %> 
		<div class="col-sm-10">
			<%= f.text_field :nome, class: 'form-control' %><br/>
		</div>	
	</div>
	
	<div class="field form-group">
		<%= f.label :endereco, class: 'col-sm-2 control-label' %> 
		<div class="col-sm-10">
			<%= f.text_field :endereco, class: 'form-control' %><br/>
		</div>	
	</div>	

	<div class="field form-group">
		<%= f.label :especialidade, class: 'col-sm-2 control-label' %> 
		<div class="col-sm-10">
			<%= f.text_field :especialidade, class: 'form-control' %><br/>
		</div>	
	</div>
	<div class="field form-group">
		<%= f.label :foto, class:'col-sm-2 control-label' %>
		<div class="col-lg-10">
			<%= f.file_field :foto, class: 'form-control' %><br/>
		</div>	
	</div>

	<div class="field form-group">
    	<div class="col-sm-offset-2 col-sm-10">
      		<%= f.submit class: "btn btn-default"%>
    	    <%= link_to 'Voltar', action:'index',class: 'btn btn-link' %>
    	</div>
  	</div>

	</div>
<% end %>	